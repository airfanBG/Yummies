@page
@model Yummies.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        /* width: 265px;
            height: 150px;*/
    }
</style>
<h2>Meals</h2>
<div class="row">


    @foreach (MenuViewModel menu in Model.Menus)
    {

        <div class="col-md-4">
            <a asp-page="Categories" asp-route-id="@menu.Id">

                <img src="~/images/@menu.Image" />
                <p style="text-align:center;">@menu.MenuName</p>


            </a>
        </div>

    }

</div>
<h2>Drinks</h2>
<div class="row">


    @foreach (DrinkCategoryViewModel drink in Model.DrinkCategories)
    {

        <div class="col-md-4">
            <a asp-page="DrinkCategories" asp-route-id="@drink.CategoryId">
               
                <img src="~/images/@drink.CategoryViewModel.Image" />
                <p style="text-align:center;">@drink.CategoryViewModel.CategoryName</p>
            </a>
        </div>

    }

</div>


