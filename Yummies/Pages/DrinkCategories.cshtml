@page
@model Yummies.Pages.DrinkCategoriesModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Model.HttpContext).RequestToken;
    }
}
@{
    ViewData["Title"] = "DrinkCategories";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        width: 265px;
       
    }
</style>

<div class="row">
    @foreach (var drink in Model.DrinkCategoryViewModels)
    {
        <div class="col-md-3">
            <form class="drink">
                <div style="display:inline-block; text-align:center;">
                    <img src="~/images/@drink.DrinkViewModel.Image" />
                    <p class="drinkName">@drink.DrinkViewModel.DrinkName</p>

                    <p class="drikPrice">@drink.DrinkViewModel.Price <span>$</span></p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <input class="form-control" style="text-align:right; width:100px;margin-left:155px;" type="number" min="1" name="Quantity" value="1" />
                        <input type="text" name="DrinkId" value="@drink.DrinkViewModel.Id" hidden />
                        <input type="text" name="isMeal" value="false" hidden />
                        <p class="col-form-label">Comment:</p>
                        <input class="form-control" type="text" name="Comment" value="" />
                        <div>
                            <input style="margin-top:5px;" type="submit" class="btn btn-success" value="Order">
                        </div>
                    }
                </div>

            </form>
        </div>
    }
</div>
<div class="row" style="margin-top:5px;">
    <input class="btn btn-info" type="button" onclick="history.go(-1)" value="Return to categories" />
</div>
@section Scripts{
    <script>

        $(function () {
             $("form").on("submit",function (e) {
                 e.preventDefault();
                 var drink = $(this).find(".drinkName").text();
            var data = $(this).serialize();
            $.ajax({
                url: "/ShoppingCart",
                type: "POST",
                    headers:
                    {
                        "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                    },

                data:data,
                success: function (data) {
                    $('#cart').remove();
                    $('#partialCart').html(data);
                    $("#orderedDrink").empty();
                    $("#orderedDrink").text(drink);
                    $('#modal').modal('toggle');
                    $('#modal').modal('show');
                    $('#modal').modal('hide');
                }
            });
        });
        });

    </script>

}
<div id="modal" class="modal hide fade" style="opacity:0.91;" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Added to cart</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="orderedDrink" style="font-size:16px;font-weight:800; color:black;"></p><span>was successfully added!</span>

            </div>
            <div class="modal-footer">
                <button id="modalClose" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


